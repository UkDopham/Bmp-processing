                 Grid.Column="1"
                 Grid.Row="1"
                 Padding="5"
                 Text="0"/>

                <TextBox x:Name="textBox8" 
                 Margin="5"
                 BorderThickness="0"
                 Grid.Column="2"
                 Grid.Row="1"
                 Padding="5"
                 Text="0"/>

