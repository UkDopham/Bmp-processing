<Window x:Class="Traitement_image_Wpf.Views.ChargementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Traitement_image_Wpf.Views"
        mc:Ignorable="d"
        Title="Chargement"
        ResizeMode="NoResize"
        Height="100" 
        Width="300">
    <StackPanel >
        <TextBlock Text="Chargmement"
                   Margin="10"/>
        <ProgressBar x:Name="chargementProgressBar" 
                     Minimum="0" 
                     Maximum="{Binding Fin}"
                     Margin="10,0"
                     Value="{Binding Valeur}"/>
    </StackPanel>
</Window>
