                        <!--Rose-->
                        <Button Grid.Column="7"
                            Grid.Row="0"
                            BorderThickness="0"
                            Background="#fff8f9"
                                Click="CouleurButtonClick"/>

                        <Button Grid.Column="7"
                            Grid.Row="1"
                            BorderThickness="0"
                            Background="#ffecef"
                                Click="CouleurButtonClick"/>

                        <Button Grid.Column="7"
                            Grid.Row="2"
                            BorderThickness="0"
                            Background="#ffdfe5"
                                Click="CouleurButtonClick"/>

                        <Button Grid.Column="7"
                            Grid.Row="3"
                            BorderThickness="0"
                            Background="#ffd2da"
                                Click="CouleurButtonClick"/>

                        <Button Grid.Column="7"
                            Grid.Row="4"
                            BorderThickness="0"
                            Background="#ffc6d0"
                                Click="CouleurButtonClick"/>

                        <Button Grid.Column="7"
                            Grid.Row="5"
                            BorderThickness="0"
                            Background="#e5acb6"
                                Click="CouleurButtonClick"/>

                        <Button Grid.Column="7"
                            Grid.Row="6"
                            BorderThickness="0"
                            Background="#b2868e"
                                Click="CouleurButtonClick"/>

                        <Button Grid.Column="7"
                            Grid.Row="7"
                            BorderThickness="0"
                            Background="#7f6065"
                                Click="CouleurButtonClick"/>

                        <Button Grid.Column="7"
                            Grid.Row="8"
                            BorderThickness="0"
                            Background="#4c393c"
                                Click="CouleurButtonClick"/>


                    </Grid>
                </Border>

            </Grid>

            <!--Image -->
            <Border Padding="20"
                    Grid.Column="1"
                    RenderTransformOrigin=".5,.5">
                <Border.RenderTransform>
                    <ScaleTransform x:Name="scale" 
                                    ScaleX="{Binding ElementName=ZoomSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                    ScaleY="{Binding ElementName=ZoomSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"/>
                </Border.RenderTransform>
                
                <Image x:Name="bmpImage" 
                       Source="{Binding ImageVM.BmpSource, UpdateSourceTrigger=PropertyChanged}"
                       MouseLeftButtonDown="Image_MouseLeftButtonDown" 
                       MouseLeftButtonUp="Image_MouseLeftButtonUp" 
                       MouseMove="Image_MouseMove"/>
            </Border>
        </Grid>

        <!--Barre d'information-->
        <Grid Grid.Row="2"
              Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text=" Clique gauche sur l'image pour dessiner"
                       Style="{StaticResource barreTextBlock}"/>

            <!--information sur la taille de l'image-->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        VerticalAlignment="Center">
                <TextBlock Text="{Binding Largeur, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource barreTextBlock}"/>
                <TextBlock Text="x"
                           Style="{StaticResource barreTextBlock}"/>
                <TextBlock Text="{Binding Hauteur, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource barreTextBlock}"/>
            </StackPanel>

            <!--Zoom-->
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="pack://siteoforigin:,,,/Resources/zoom-out.png"
                       Style="{StaticResource imageBarreDeTache}"
                       Grid.Column="0"/>

                <Slider x:Name="ZoomSlider" 
                        Grid.Column="1"
                        VerticalAlignment="Center"                        
                        Maximum="1"
                        Minimum="0.5"
                        Margin="5,0"/>

                <Image Source="pack://siteoforigin:,,,/Resources/zoom-in.png"
                       Style="{StaticResource imageBarreDeTache}"
                       Grid.Column="2"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
