<UserControl x:Class="Traitement_image_Wpf.Views.MenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Traitement_image_Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" 
             d:DesignWidth="1050">
    <Grid Background="{StaticResource grisClaire}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barre d'outil-->
        <Grid Grid.Column="0"
              Grid.Row="0"
              Background="White"
              MouseLeftButtonDown="Grid_MouseLeftButtonDown">

            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!-- bouton enregistrer etc -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Fichier-->
                <Button Background="White"
                        BorderThickness="0"
                        Click="folderButtonClick"
                        Grid.Column="0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Style="{StaticResource imageBarreDeTache}"
                               Source="pack://siteoforigin:,,,/Resources/bmp.png"/>
                            <TextBlock Text=" Ouvrir"
                                       Style="{StaticResource barreTextBlock}"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!--Nouveau-->
                <Button Background="White"
                        BorderThickness="0"
                        Grid.Column="1"
                        Click="NewButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Style="{StaticResource imageBarreDeTache}"
                               Source="pack://siteoforigin:,,,/Resources/bmp.png"/>
                            <TextBlock Text=" Nouveau"
                                       Style="{StaticResource barreTextBlock}"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!--Enregistrer-->
                <Button Background="White"
                        BorderThickness="0"
                        Grid.Column="2"
                        Click="EnregistrerButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Style="{StaticResource imageBarreDeTache}"
                               Source="pack://siteoforigin:,,,/Resources/bmp.png"/>
                            <TextBlock Text=" Enregistrer"
                                       Style="{StaticResource barreTextBlock}"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!--Profile-->
                <StackPanel Orientation="Horizontal"
                            Grid.Column="3">

                    <Image Source="pack://siteoforigin:,,,/Resources/man (1).png"/>

                    <TextBlock x:Name="loginTextBlock" 
                               Margin="3,0" 
                               Text="{Binding Nom , UpdateSourceTrigger=PropertyChanged}"
                               Style="{StaticResource barreTextBlock}"/>
                </StackPanel>

                <!-- Historique-->
                <Button Background="White"
                        BorderThickness="0"
                        Grid.Column="4"
                        Click="HistoriqueButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Style="{StaticResource imageBarreDeTache}"
                               Source="pack://siteoforigin:,,,/Resources/navigation-history-interface-symbol-of-a-clock-with-an-arrow.png"/>
                            <TextBlock Text=" Historique"
                                       Style="{StaticResource barreTextBlock}"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                
                <!--Fermer-->
                <Button Background="White"
                        BorderThickness="0"
                        Grid.Column="6"
                        Click="FermerButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Style="{StaticResource imageBarreDeTache}"
                               Source="pack://siteoforigin:,,,/Resources/cancel.png"/>
                            <TextBlock Text=" Fermer"
                                       Style="{StaticResource barreTextBlock}"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!--Jeu-->
                <Button x:Name="jeuBouton" 
                    Background="White"
                    BorderThickness="0"
                    Grid.Column="5"
                        Click="jeuBouton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Style="{StaticResource imageBarreDeTache}"
                               Source="pack://siteoforigin:,,,/Resources/trophy.png"/>
                            <TextBlock Text=" Jeu devinette"
                                       Style="{StaticResource barreTextBlock}"/>
                        </StackPanel>
                    </Button.Content>
