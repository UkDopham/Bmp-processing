                          x:Name="OutilComboBox">
                    
                    <ComboBoxItem x:Name="StyloComboBoxItem" 
                                  IsSelected="True">
                        <Image x:Name="StyloImage" 
                               Style="{StaticResource imageBarreDeTache}"
                       Source="pack://siteoforigin:,,,/Resources/pen.png"/>
                    </ComboBoxItem>
                    
                </ComboBox>

                <!-- taille outils -->
                <TextBlock Text="Taille du l'outils"
                           Style="{StaticResource barreTextBlock}"/>

                <ComboBox x:Name="FontSizeComboBox" 
                          Margin="5,2"
                          VerticalAlignment="Center">
                    <ComboBoxItem IsSelected="True" Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="7"/>
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="9"/>
                    <ComboBoxItem Content="10"/>
                </ComboBox>

                <!--Nom du fichier-->
                <TextBlock Text="{Binding NomFichier, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource barreTextBlock}"/>
            </StackPanel>

