<Window x:Class="Traitement_image_Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Traitement_image_Wpf"
        xmlns:viewmodels ="clr-namespace:Traitement_image_Wpf.ViewModels"
        xmlns:views ="clr-namespace:Traitement_image_Wpf.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Icon ="pack://siteoforigin:,,,/Resources/picture.png"
        FontFamily="Segoe UI Light"
        Title="Traitement image" 
        Height="700" 
        Width="1050">
    
    <Grid>
        <ContentControl Content="{Binding}"/>
    </Grid>
</Window>
